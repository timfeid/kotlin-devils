<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.timfeid.njd.ui.player.PlayerActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="@color/lightGrey"
        android:theme="@style/ToolbarColoredBackArrow"
        android:fitsSystemWindows="true"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/action_photo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@color/transparentBlack"
                    android:contentDescription="TODO" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_shape" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="-8dp"
                    android:layout_gravity="start"
                    android:background="@drawable/gradient_shape_start" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="-8dp"
                    android:background="@drawable/gradient_shape_end" />
            </FrameLayout>
            <ImageView
                android:id="@+id/player_photo"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginTop="-33dp"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/player_photo_bg"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textSize="24sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/birthday"
                        android:layout_marginVertical="4dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/birthplace"
                        android:layout_marginVertical="4dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/shoots"
                        android:layout_marginVertical="4dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/draft"
                        android:layout_marginVertical="4dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <WebView
                android:layout_marginTop="10dp"
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>