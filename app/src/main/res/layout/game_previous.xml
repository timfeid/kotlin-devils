<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/transparentBlack"
            />
        <RelativeLayout
            android:background="@color/transparentBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.timfeid.njd.ui.FontTextView
                android:id="@+id/game_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Sep 03"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-light" />

            <com.timfeid.njd.ui.BoldFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingTop="17dp"
                android:text="7:00 PM"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/game_time"/>

            <View
                android:background="@color/transparentMax"
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-225dp"
            android:weightSum="2"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="15dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="start"
                    android:scaleType="fitStart"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    tools:layout_height="70dp"
                    android:tag="HOME_TEAM_LOGO" />


                <com.timfeid.njd.ui.FontTextView
                    android:id="@+id/homeTeamRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="26-16-8, 60pts"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <com.timfeid.njd.ui.FontTextView
                    android:id="@+id/homeTeamCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-8sp"
                    android:layout_gravity="start"
                    android:text="Home City"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:textColor="#fff" />

                <com.timfeid.njd.ui.BoldFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-13dp"
                    android:layout_gravity="start"
                    android:textColor="#fff"
                    android:text="Home Team"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:tag="HOME_TEAM_NAME" />

                <View
                    android:background="@color/transparentMax"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <com.timfeid.njd.ui.BoldFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="start"
                    android:textColor="#fff"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:tag="HOME_TEAM_SCORE"/>





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="end"
                    android:scaleType="fitEnd"
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    tools:layout_height="70dp"
                    android:tag="AWAY_TEAM_LOGO" />

                <com.timfeid.njd.ui.FontTextView
                    android:id="@+id/awayTeamRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-light"
                    android:text="26-16-8, 60pts"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <com.timfeid.njd.ui.FontTextView
                    android:id="@+id/awayTeamCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8sp"
                    android:includeFontPadding="false"
                    android:layout_gravity="end"
                    android:textColor="#fff"
                    android:text="Away City"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-light"
                    android:tag="AWAY_TEAM_CITY"
                    android:textSize="24sp"/>

                <com.timfeid.njd.ui.BoldFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="end"
                    android:text="Away Team"
                    android:layout_marginTop="-13sp"
                    android:textColor="#fff"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:tag="AWAY_TEAM_NAME" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/transparentMax" />

                <com.timfeid.njd.ui.BoldFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="end"
                    android:layout_marginTop="-5dp"
                    android:textColor="#fff"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:tag="AWAY_TEAM_SCORE"/>



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="1dp"
            android:background="@color/transparentBlack">
            <com.timfeid.njd.ui.BoldFontButton
                android:layout_height="40dp"
                android:id="@+id/videoInfo"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/ic_play_circle_outline_black_20dp"
                android:drawableTint="@color/transparentIsh"
                android:background="#00000000"
                android:textColor="@color/transparentIsh"
                android:drawablePadding="4dip"
                android:fontFamily=""
                android:text="Watch Live"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/players_on_ice_box"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:padding="15dp"
            android:background="@color/transparentBlack"
            android:orientation="vertical">
            <com.timfeid.njd.ui.BoldFontTextView
                android:text="@string/players_on_ice_header"
                android:textColor="@color/transparentMax"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/home_on_ice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/away_on_ice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linescore_box"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:background="@color/transparentBlack"
            android:orientation="vertical">
            <com.timfeid.njd.ui.BoldFontTextView
                android:text="@string/linescore_header"
                android:textColor="@color/transparentMax"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <com.timfeid.njd.ui.FontTextView
                        android:layout_span="2"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:id="@+id/period_1_name"
                        android:text="@string/period_1_name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3sp"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:textAlignment="center"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:id="@+id/period_2_name"
                        android:text="@string/period_2_name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3sp"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:textAlignment="center" />
                    <com.timfeid.njd.ui.FontTextView
                        android:id="@+id/period_3_name"
                        android:text="@string/period_3_name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3sp"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:textAlignment="center" />
                    <com.timfeid.njd.ui.FontTextView
                        android:id="@+id/period_4_name"
                        android:text="@string/period_4_name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3sp"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:visibility="gone"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:id="@+id/period_so_name"
                        android:text="@string/period_so_name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3sp"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:visibility="gone"/>
                    <com.timfeid.njd.ui.BoldFontTextView
                        android:text="@string/final_score_name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3sp"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <ImageView
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        tools:layout_height="30dp"
                        android:tag="HOME_TEAM_LOGO"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.timfeid.njd.ui.BoldFontTextView
                            android:text="Home Team"
                            android:textStyle="bold"
                            android:padding="3dip"
                            android:includeFontPadding="false"
                            android:tag="HOME_TEAM_NAME"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:layout_height="24dp"
                            android:layout_width="wrap_content" />
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/home_team_sog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 SOG"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="3dp"
                            android:textSize="12sp"
                            android:textColor="@color/transparentIsh"/>

                    </LinearLayout>
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/home_team_p1_score"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/home_team_p2_score" />
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/home_team_p3_score" />
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/home_team_p4_score"
                        android:visibility="gone"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/home_team_so_score"
                        android:visibility="gone"/>
                    <com.timfeid.njd.ui.BoldFontTextView
                        android:text="0"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:tag="HOME_TEAM_SCORE" />
                </TableRow>
                <TableRow>
                    <ImageView
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        tools:layout_height="30dp"
                        android:tag="AWAY_TEAM_LOGO"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.timfeid.njd.ui.BoldFontTextView
                            android:text="Away Team"
                            android:textStyle="bold"
                            android:padding="3dip"
                            android:includeFontPadding="false"
                            android:tag="AWAY_TEAM_NAME"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:layout_height="24dp"
                            android:layout_width="wrap_content" />
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/away_team_sog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 SOG"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="3dp"
                            android:textColor="@color/transparentIsh"
                            android:textSize="12sp"/>

                    </LinearLayout>
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/away_team_p1_score"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/away_team_p2_score" />
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/away_team_p3_score" />
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/away_team_p4_score"
                        android:visibility="gone"/>
                    <com.timfeid.njd.ui.FontTextView
                        android:text="@string/dash"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:id="@+id/away_team_so_score"
                        android:visibility="gone"/>
                    <com.timfeid.njd.ui.BoldFontTextView
                        android:text="0"
                        android:textSize="20sp"
                        android:padding="3dip"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:tag="AWAY_TEAM_SCORE" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/boxscore_box"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:background="@color/transparentBlack"
            android:orientation="vertical">
            <com.timfeid.njd.ui.BoldFontTextView
                android:text="@string/boxscore_header"
                android:textColor="@color/transparentMax"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/boxscore"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_stars_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparentBlack"
            android:padding="15dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <com.timfeid.njd.ui.BoldFontTextView
                android:text="@string/three_stars_header"
                android:textColor="@color/transparentIsh"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/first_star_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/first_star_name"
                            android:layout_width="match_parent"
                            android:includeFontPadding="false"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:text="Some Player"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/first_star_stats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1G, 2A"
                            android:textColor="@color/transparentIsh"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/second_star_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher" />
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/second_star_name"
                            android:layout_width="match_parent"
                            android:includeFontPadding="false"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:text="Some Player"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/second_star_stats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1G, 2A"
                            android:textColor="@color/transparentIsh"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/third_star_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/third_star_name"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:layout_height="match_parent"
                            android:text="Some Player"
                            android:textColor="@color/colorAccent"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <com.timfeid.njd.ui.FontTextView
                            android:id="@+id/third_star_stats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1G, 2A"
                            android:textColor="@color/transparentIsh"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparentBlack"
            android:padding="15dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <com.timfeid.njd.ui.BoldFontTextView
                android:text="@string/score_summary_header"
                android:textColor="@color/transparentIsh"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <LinearLayout
                android:id="@+id/scoring_summary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>